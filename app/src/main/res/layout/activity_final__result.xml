<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/girls"
    tools:context="com.example.genesissy.baskekball.Final_Result">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="27dp"
        android:background="#2534"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout10">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:text="FINAL RESULS"
            android:textAlignment="center"
            android:textColor="#008000"
            android:textSize="70dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Game OF Basket"
            android:textAlignment="center"
            android:textSize="48dp"
            android:textColor="#FF8C00"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout11"
        android:layout_below="@+id/linearLayout10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout12"
        android:layout_below="@+id/linearLayout11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TEAM A"
                android:textSize="70sp"
                android:textAlignment="center"
                android:background="#FF7F50"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout13"
        android:layout_below="@+id/linearLayout11"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TEAM B"
            android:textSize="60sp"
            android:textAlignment="center"
            android:background="#6495ED"/>

    </LinearLayout>

    <LinearLayout
        android:background="@color/colorAccent"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_marginTop="14dp"
        android:id="@+id/linearLayout14"
        android:layout_below="@+id/linearLayout13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/score_A"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SCORE"
            android:textSize="50sp"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:background="#696969"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_alignTop="@+id/linearLayout14"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout16">

        <TextView
            android:id="@+id/score_B"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:text="SCORE B"
            android:textAlignment="center"
            android:textSize="50sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#000000"
        android:id="@+id/linearLayout4"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/linearLayout14"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/final_teamA"
            android:layout_width="200dp"
            android:layout_height="110dp"
            android:layout_marginLeft="55dp"
            android:background="#FF0000"
            android:text="0"
            android:textColor="#00FF00"
            android:textSize="85dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#000000"
        android:id="@+id/linearLayout6"
        android:layout_alignTop="@+id/linearLayout4"
        android:layout_toRightOf="@+id/linearLayout4"
        android:layout_toEndOf="@+id/linearLayout4">

        <Button
            android:id="@+id/final_teamB"
            android:layout_width="200dp"
            android:layout_height="110dp"
            android:textSize="85dp"
            android:text="0"
            android:background="#FF0000"
            android:textColor="#00FF00"
            android:layout_marginLeft="55dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:background="@drawable/body"
        android:layout_above="@+id/linearLayout16"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="@drawable/body"
        android:layout_above="@+id/linearLayout6"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout14">

    </LinearLayout>

</RelativeLayout>
